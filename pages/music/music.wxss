/* tab */
.tab{
  font-size: 14px;
  background-color: rgba(240,240,240,.8);
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tab-item{
  height: 60rpx;
  border-bottom: 1px solid  rgba(240,240,240,.8);
}
.active {
  color: #BB2C08;
  border-bottom-color: #BB2C08;
}
/* nav */
.nav{
  display: flex;
  justify-content: space-around;
  /* align-items: center; */
  font-size: 12px;
  border: 1px solid rgba(240,240,240,.8);
  
}
.nav view {
  flex: 1;
  text-align: center;
  /* padding-bottom: 10rpx; */
  /* margin: 20rpx auto; */
}
.nav navigator{padding:25rpx 0;font-size: 26rpx;}
.nav-item{
  width: 110rpx;
  height: 110rpx;
  border: 1px solid #BB2C08;
  border-radius: 50%;
  margin-bottom: 20rpx;
  text-align: center;
  margin: 25rpx auto;
}
.days{
  line-height: 110rpx;
  text-align: center;
  color: #BB2C08;
  font-size: 60rpx;
}
.nav-item image{width:110rpx;height:110rpx;}
/* 推荐歌单 */
.play-nav{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  padding: 5rpx 10rpx;
  margin: auto;
}
.play-more{
  color: #BB2C08;
  /* display: flex; */
  /* justify-content: end; */
}
.play-nav image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.play-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  font-size: 12px;
  padding-left: 10rpx;
}
.i{
  width: 235rpx;
  height: 200rpx;
}
.play-item {
  flex: 1;
}
.play-list-nav {
  /* flex: 1; */
  /* width: 33.33%; */
  margin: 10rpx 10rpx 0 0;
}
.play-text{
  overflow: hidden;
  /* text-overflow: ellipsis; */
  /* white-space: nowrap; */
  font-size: 12px;
  width: 100%;
}