/* tab */
.tab{
  font-size: 14px;
  background-color: rgba(240,240,240,.8);
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: "#212121";
}
.tab-item{
  height: 60rpx;
  border-bottom: 1px solid  rgba(240,240,240,.8);
}
.active {
  color: "#212121";
  border-bottom-color: #212121;
}