/* pages/album/album.wxss */
.play-header{
  width: 100%;
  background-color: rgba;
}
.play-bgc{
  width: 100%;
  height: 488rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
}
.play-bgca{
  width: 100%;
  height: 488rpx;
  background-color: rgba(165, 165, 165, 0.9);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.play-main{
  height: 345rpx;
}
.p-m-i{
  width: 250rpx;
  height: 250rpx;
  margin: 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  margin-bottom: 10rpx;
}
.p-m-a{
  margin: 30rpx;
  position: relative;
  width: 300rpx;
  height: 250rpx;
  /* top: 32rpx;
  left: 26rpx; */
}
.playcount{
  position: absolute;
    left: 55rpx;
    top: 30rpx;
    color: #fff;
    z-index: 1;
    font-size: 24rpx;
    padding: 8rpx 15rpx 8rpx 40rpx;
    background-image: linear-gradient(90deg, rgba(0,0,0,0),rgba(0,0,0,.2));
    text-align: right;
}
.infor{
  position: absolute;
  top: 186rpx;
  left: 150rpx;
}
.play-text{
  color: #fff;
}
.text-w{
  font-size: 10px;
    line-height: 78rpx;
    margin-left: 10rpx;
}
.text-title{
  font-size: 32rpx;
  padding: 60rpx 20rpx 40rpx 0;
  display: block;
}
.nav-item{
  color: #fff;
  font-size: 10px;
}
.nav-item-image{
  width: 110rpx;
  height: 110rpx;
  display: block;
  margin: 0 auto -20rpx;
}
.s-idx{
  font-size: 16px;
  color: #b6b6b6;
  padding: 25rpx 25rpx;
}
.song{
  /* background-color: #333333;  */
  width: 100%;
  border-bottom: 1px solid  #b6b6b6;
  color: #2c2a2a;
  font-size: 12px;
  padding: 10rpx 0;
}
.ss-i{
  width: 70rpx;
  height:  70rpx;
}
.nav-song{
  margin-top: 30rpx;
}
.song-length{
  font-size: 10px;
  color: #b6b6b6;
}
.po{
  border-bottom: 1px solid  #b6b6b6;
  width: 100%;
  padding: 10rpx 0px;
  font-size: 14px;
}
.play{
  margin: auto 22rpx;
}
.text-time{
  display: block;
    color: #fff;
    font-size: 24rpx;
    line-height: 50rpx;
}
.song-name{
  overflow: hidden;
  text-overflow: ellipsis;
  width: 672rpx;
}
.song-ar{
  color: #999;
    font-size: 24rpx;
    white-space: -2rpx;
}